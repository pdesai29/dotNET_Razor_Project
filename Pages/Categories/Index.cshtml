@page
@model bulky_Razor_temp.Pages.Categories.IndexModel;

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-page="/Categories/Create"class="btn btn-primary "> <i class="bi bi-plus"></i> Create New Category  </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach(var obj in Model.CategoryList)
        {
            
        <tr>
            <td>@obj.Name</td>
            <td>@obj.Description</td>
           <td>
               <div class="btn-group w-75" role="group">
                   <a asp-page="/Categories/Edit" asp-route-id="@obj.Id"  class="btn btn-primary mx-2">
                        <i class="bi bi-pencil"></i>
                        Edit
                   </a>
                        <a asp-page="/Categories/Delete"  asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                            Delete
                        </a>
               </div>
                      
           </td>
        </tr>
        }
    </tbody>
</table>